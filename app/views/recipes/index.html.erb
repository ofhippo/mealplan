<table>
  <tr>
    <th>Name</th>
    <th>Destroy</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <%= link_to recipe.name, recipe_path(recipe) %>
      </td>
      <td>
        <%= link_to "X", recipe_path(recipe), :method => :delete, :confirm => "Are you sure?" %>
      </td>
    </tr>
  <br/>  
  <% end %>
</table>
